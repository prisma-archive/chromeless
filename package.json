{
  "name": "chromeless",
  "version": "1.3.0",
  "description": "ðŸ–¥ Chrome automation made simple. Runs locally or headless on AWS Lambda.",
  "homepage": "https://github.com/graphcool/chromeless",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/graphcool/chromeless.git"
  },
  "bug": {
    "url": "https://github.com/graphcool/chromeless/issues"
  },
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">= 6.10.0"
  },
  "scripts": {
    "build": "npm run clean && tsc -d",
    "clean": "rimraf dist",
    "coverage": "npm run jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "prepublishOnly": "npm test && npm run build",
    "prettier": "prettier --no-semi --single-quote --trailing-comma all --write \"src/**/*.ts\"",
    "release": "np",
    "test": "npm run tslint && npm run jest",
    "watch": "tsc -w",
    "watch:test": "npm run jest:watch",
    "launch:chrome": "ts-node utils/launch_chrome.ts",
    "jest": "tsc && jest --no-cache --coverage --forceExit --runInBand",
    "jest:watch": "jest --watch --no-cache",
    "lint": "npm run tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json --exclude node_modules/**"
  },
  "dependencies": {
    "@types/typescript": "^2.0.0",
    "aws-sdk": "^2.90.0",
    "bluebird": "^3.5.0",
    "chrome-launcher": "^0.4.0",
    "chrome-remote-interface": "^0.24.2",
    "cuid": "^1.3.8",
    "form-data": "^2.2.0",
    "got": "^7.1.0",
    "mqtt": "^2.11.0",
    "unhandled-rejection": "^1.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/cuid": "^1.3.0",
    "@types/jest": "^20.0.6",
    "@types/node": "^8.0.15",
    "@types/shelljs": "^0.7.4",
    "babel-jest": "^20.0.3",
    "chalk": "^2.1.0",
    "coveralls": "^2.13.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "lint-staged": "^4.0.2",
    "np": "^2.16.0",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.9",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/utils/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/utils/jest_setup.js",
    "mapCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!chrome-launcher)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --no-semi --single-quote --trailing-comma all --write",
      "lint",
      "git add"
    ]
  }
}
