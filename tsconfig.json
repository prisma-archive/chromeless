{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "strictNullChecks": false,
    "pretty": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "dist"
  ],
  "include": [
    "./utils/launch_chrome.ts",
    "./src/**/*.ts",
    "./examples/**/*.ts"
  ]
}
